{
  "manifest_version": 3,
  "name": "WebShield IDS",
  "version": "1.0.0",
  "description": "Protects you from phishing websites using machine learning",
  
  "permissions": [
    "webRequest",
    "tabs",
    "storage",
    "notifications",
    "activeTab"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  
  "icons": {
    "128": "icon.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}